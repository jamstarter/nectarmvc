<body>
<div class='header'>

	<nav class="navbar navbar-inverse" role="navigation">
  <div class="container">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="/"><img src="/images/nectar_logo.png" class='logo' ></a>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
      	<li {% if server['REQUEST_URI'] == '/' %}class='active'{% endif %}><a href="/">What is Nectar?</a></li>
      	<li {% if '/modules' in server['REQUEST_URI'] %}class='active'{% endif %}> <a href="/modules">Modules</a></li>
        <li {% if '/docs' in server['REQUEST_URI'] %}class='active'{% endif %}> <a href="/docs">Documentation / Download</a></li>

      </ul>

      <ul class='nav navbar-nav navbar-right'>
        {% if session.user is defined %}
          <li {% if '/logout' in server['REQUEST_URI'] %}class='active'{% endif %}> <a href="/logout">Logout</a></li>
        {% else %}
          <li {% if '/login' in server['REQUEST_URI'] %}class='active'{% endif %}> <a href="/login">Login</a></li>
          <li {% if '/register' in server['REQUEST_URI'] %}class='active'{% endif %}> <a href="/register">Register</a></li>
        {% endif %}
      </ul>
    
      
    </div><!-- /.navbar-collapse -->
